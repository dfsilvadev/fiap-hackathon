# App
NODE_ENV=development
PORT=3000

# Database (Prisma) — para desenvolvimento, use seu PostgreSQL local
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/hackathon

# Docker Compose (api + db) — usadas ao rodar docker compose up
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hackathon

# Auth (JWT)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate limit (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
